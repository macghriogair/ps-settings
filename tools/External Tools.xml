<toolSet name="External Tools">
  <tool name="PHP CS Fixer" description="Apply php-cs-fixer to the current file." showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$USER_HOME$/.composer/vendor/bin/php-cs-fixer" />
      <option name="PARAMETERS" value="--rules=&quot;@PSR2,no_unused_imports&quot; fix $FileDir$/$FileName$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>